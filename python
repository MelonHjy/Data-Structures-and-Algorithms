# 栈应用：括号匹配    *使用计数器不好：反例 '[(])'
def paren(string):
    stack = []
    for i in string:
        if i == '(':
            stack.append(i)
        elif i == ')'and stack:
            stack.pop()
        else:
            return False
    if stack:
        return False
    else:
        return True

print(paren('(())'))
print(paren('([))'))
print(paren('(()))'))
