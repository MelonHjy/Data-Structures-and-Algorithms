# 动态规划入门：
def minCoin(money):
    coin = [1, 2, 3, 5]
    if money == 0:
        return 0
    L = []
    for i in coin:
        if money >= i:
            L.append(minCoin(money-i)+1)
    return min(L)

for k in range(0,12):
    print(minCoin(k))

