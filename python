# 删除有序列表中重复元素 O(n)
def uniquify(list):
    i = 0
    while i < len(list)-1:
        if list[i] == list[i+1]:
            list.remove(list[i+1])
        else:
            i += 1

L = [1,1,1,1]
uniquify(L)
print(L)
