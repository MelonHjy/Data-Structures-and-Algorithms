# 逆波兰（简易实现加减乘除）
def calculate():
    tab = {'+': 1, '-': 1, '*': 2, '/': 2}
    token = input('算式：').split(' ')
# 将中缀表达式转成后缀表达式
    RPN, stack = [], []
    for i in token:
        if i.isdigit():         # 如果是整数
            RPN.append(i)
        else:                  # 如果是运算符
            while i not in stack:
                if stack == [] or tab[i] > tab[stack[-1]]:
                    stack.append(i)
                else:
                    RPN.append(stack.pop())
    while stack:
        RPN.append(stack.pop())
# 求值
    result = []
    for j in RPN:
        if j.isdigit():
            result.append(j)
        else:
            num1 = result.pop()
            num2 = result.pop()
            result.append(eval(str(num2)+j+str(num1)))
    return print(result[0])

calculate() # 输入 1 - 2 * 3 + 4  ==> ['1','2','3','*','-','4','+'] ==> -1
