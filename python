# python列表   效率
import time
def reverse(L): # 循位置访问
    for i in range(0, len(L)):
        L.insert(i, L.pop())
    return L
def reverse2(L): # 循秩访问
    i, j = 0, len(L)-1
    while i < j:
        L[i], L[j] = L[j], L[i]
        i, j = i+1, j-1
    return L

L = [i for i in range(0,100000)]
a=time.time()
reverse(L)
b=time.time()
print(b-a)
reverse2(L)
c=time.time()
print(c-b)
