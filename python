# 数组求和：线性递归
def LinearSum(L):
    if not L:
        return 0
    return LinearSum(L[:-1])+L[-1]

print(LinearSum([15,25,89,265,454,1]))
# 数组求和：二分递归
def erfenSum(L):
    mid = len(L) //2
    if len(L) == 1:
        return L[0]
    return erfenSum(L[:mid])+erfenSum(L[mid:])


print(erfenSum([15,25,89,265,454,1]))
