# 有序向量的查找（python列表用index）
class myList(list)
	# 二分查找（头哨兵lo-1，尾哨兵hi）
    def binSearch(self, e, lo=0, hi=0):
        if hi == 0:
            hi = self.__len__()
        while lo < hi:
            mi = (lo+hi)//2
            if e < self[mi]:
                hi = mi
            elif self[mi] < e:
                lo = mi+1
            else:
                return mi
        return -1
	# fib查找
    # 二分查找（改进）
    def binSearch2(self, e, lo=0, hi=0):
        if hi == 0:
            hi = self.__len__()
        while lo < hi:
            mi = (lo+hi)//2
            if e < self[mi]:
                hi = mi
            else:
                lo = mi + 1
        return lo-1

a = myList([1,2,3])
print(a.binSearch(3, 0, 1))
print(a.binSearch2(3, 0, 1))
